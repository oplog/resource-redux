{
  "name": "resource-redux",
  "version": "0.1.0",
  "description": "generic http resource store for redux",
  "main": "dist/main",
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "webpack --config webpack.config.js --mode production",
    "build:dev": "webpack --config webpack.config.js --mode development -p --progress",
    "watch": "npm run build:dev -- --watch",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublish": "npm run build"
  },
  "types": "dist/index",
  "typings": "dist/index",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "jest": "^23.6.0",
    "rimraf": "^2.6.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.1.4",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "redux": "^4.0.1",
    "redux-saga": "^0.16.0"
  },
  "peerDependencies": {
    "redux-saga": "^0.16.0"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 100,
        "lines": 87,
        "statements": 84
      }
    }
  }
}
